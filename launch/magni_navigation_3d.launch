<?xml version="1.0" encoding="UTF-8"?> 
<launch>
    <param name="/use_sim_time" value="true" />

    <arg name="nav_type" default="static" />

    <!-- <include file="$(find magni_octonav)/launch/localization.launch"/> -->

    <include file="$(find magni_octonav)/launch/vlp_graph_slam_sim.launch" />


    <!-- <include file="$(find magni_octonav)/launch/octomapping.launch" /> -->


    <node pkg="magni_octonav" type="grid_mapper.py" name="grid_mapper" output="screen">
        <param name="sensor_model_p_occ" value="0.75" />
        <param name="sensor_model_p_free" value="0.45" />
        <param name="sensor_model_p_prior" value="0.5" />
        <param name="map_frame" value="map" />
        <param name="robot_frame" value="base_footprint" />
        <param name="map_center_x" value="-8.0" />
        <param name="map_center_y" value="-8.0" />
        <param name="map_size_x" value="60.0" />
        <param name="map_size_y" value="60.0" />
        <param name="map_resolution" value="0.05" />
        <param name="map_publish_freq" value="1.0" />
        <param name="update_movement" value="0.05" /> <!-- update when moved this much -->
    </node>


    <!-- Parse LaserScan -->
    <!-- <include file="$(find magni_octonav)/launch/vlp16_laserscan.launch" /> -->

    <!-- Load move_base node -->
    <include file="$(find magni_octonav)/launch/move_base.launch">
        <arg name="move_base_type" value="$(arg nav_type)" />
    </include>
    
</launch>